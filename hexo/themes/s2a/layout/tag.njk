{# Single Post Layout #}
<div class="container section-container">
    <section class="d-flex pb-0">
        <div class="m-auto">
            <h1 class="heading">#{{ page.tag }}</h1>
        </div>
    </section>
    {% for post in site.tags.findOne({name: page.tag}).posts.toArray()|sort(true, false, 'date') %}
        {% include 'partials/single-post.njk' %}
    {% endfor %}
    {% include 'partials/disqus.njk' %}
</div>
