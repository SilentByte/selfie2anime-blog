{# Single Post Excerpt #}
<section class="d-flex {{ 'divider' if not loop.last }}">
    <div class="m-auto">
        <h1 class="text-center">
            <a href="{{ url_for(post.path) }}">
                &ldquo;{{ post.title }}&rdquo;
            </a>
        </h1>

        <div class="mt-2 mb-3 m small text-center">
            {{ date(post.date, 'MMMM DD, YYYY') }}
        </div>

        {% if post.excerpt %}
            {{ post.excerpt|safe }}
        {% else %}
            {{ post.content|safe }}
        {% endif %}

        {% if loop.first %}
            <div class="text-center my-4">
                <a href="https://www.producthunt.com/posts/selfie2anime?utm_source=badge-featured&utm_medium=badge&utm_souce=badge-selfie2anime"
                   target="_blank">
                    <img src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=164770&theme=light"
                         alt="Selfie2Anime - Ever wondered what you'd look like as an Anime character? | Product Hunt Embed"
                         style="width: 250px; height: 54px;" width="250px" height="54px" />
                </a>
            </div>
        {% endif %}

        <div class="text-right">
            <a href="{{ url_for(post.path) }}"
               class="btn btn-primary">
                Continue Reading
            </a>
        </div>

        <div class="mt-3 text-center small tag-container">
            {% if post.tags.length > 0 %}
                {% for tag in post.tags.toArray()|sort(true, false, 'length') %}
                    <a href="{{ url_for(tag.path) }}" class="mx-1">
                        #{{ tag.name }} ({{ tag.length }})
                    </a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
