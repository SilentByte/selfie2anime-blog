{# Single Post Layout #}
<div class="container section-container">
    <section>
        <div class="m-auto">
            <h1 class="heading">
                <a href="{{ url_for(page.path) }}">
                    {{ page.title }}
                </a>
            </h1>
        </div>

        <div class="mt-5">
            {% for post in site.posts.toArray()|sort(true, false, 'date') %}
                <div class="row mb-4">
                    <div class="col col-12">
                        <div class="card p-4 shadow">
                            <div class="row no-gutters">
                                <div class="col-auto m-auto pb-3 pb-sm-0">
                                    <a href="{{ url_for(post.path) }}">
                                        <img class="no-hover"
                                             src="{{ url_for(post.path) + 'thumbnail.png' }}"
                                             alt="{{ post.title }}"
                                             width="200"
                                             height="200">
                                    </a>
                                </div>
                                <div class="col">
                                    <div class="card-block px-4">
                                        <div class="card-title">
                                            <h3>
                                                <a href="{{ url_for(post.path) }}">
                                                    #{{ loop.revindex }}: &ldquo;{{ post.title }}&rdquo;
                                                </a>
                                            </h3>
                                        </div>
                                        <div class="my-2 small">
                                            {{ date(post.date, 'MMMM DD, YYYY') }}
                                        </div>
                                        <div class="card-text">
                                            {% if post.description %}
                                                {{ markdown(post.description)|safe }}
                                            {% else %}
                                                {{ post.excerpt|safe }}
                                            {% endif %}
                                        </div>
                                        <div class="text-right">
                                            <a href="{{ url_for(post.path) }}"
                                               class="btn btn-primary">
                                                Read Article
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    {% include 'partials/disqus.njk' %}
</div>
