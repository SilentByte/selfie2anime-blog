{# Single Post Layout #}
<div class="container section-container">
    <section>
        <div class="m-auto">
            <h1 class="heading">
                <a href="{{ url_for(page.path) }}">
                    {{ page.title }}
                </a>
            </h1>

            <div class="mt-5 text-center tagcloud">
                {% for tag in site.tags.toArray()|sort(true, false, 'length') %}
                    <a href="{{ url_for(tag.path) }}" class="mx-1">
                        #{{ tag.name }}&nbsp;<span class="regular">({{ tag.length }})</span>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>
    {% include 'partials/disqus.njk' %}
</div>
